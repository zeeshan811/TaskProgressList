<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.ControllerFiles.JavaWeek"
          prefHeight="400.0" prefWidth="600.0">
    <Label text="Welcome to the Java cert Week1 progress list" GridPane.rowIndex="0"> </Label>
    <Label text="Hours worked for Sunday" GridPane.rowIndex="1"  GridPane.columnIndex="0"></Label>
    <TextArea fx:id="sundayHours1" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#sundayButton1" text="Ok" GridPane.rowIndex="1" GridPane.columnIndex="2"></Button>
    <Label text ="Hours worked for Monday" GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="mondayHours1" GridPane.rowIndex="2" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#mondayButton1" text="Ok" GridPane.rowIndex="2" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Tuesday" GridPane.rowIndex="3" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="tuesdayHours1" GridPane.rowIndex="3" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#tuesdayButton1" text="Ok" GridPane.rowIndex="3" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Wednesday" GridPane.rowIndex="4" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="wednesdayHours1" GridPane.rowIndex="4" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#wednesdayButton1" text="Ok" GridPane.rowIndex="4" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Thursday" GridPane.rowIndex="5" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="thursdayHours1" GridPane.rowIndex="5" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#thursdayButton1" text="Ok" GridPane.rowIndex="5" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Friday" GridPane.rowIndex="6" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="fridayHours1" GridPane.rowIndex="6" GridPane.columnIndex="1" ></TextArea>
    <Button onAction="#fridayButton1" text="Ok" GridPane.rowIndex="6" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Saturday" GridPane.rowIndex="7" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="saturdayHours1" GridPane.rowIndex="7" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#saturdayButton1" text="Ok" GridPane.rowIndex="7" GridPane.columnIndex="2"></Button>
    <Button text="Exit" GridPane.rowIndex="8"></Button>
</GridPane>
