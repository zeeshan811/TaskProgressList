<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.ControllerFiles.JSHTMLCSSWeek"
          prefHeight="400.0" prefWidth="600.0">
    <Label text="Welcome to the Java cert Week1 progress list" GridPane.rowIndex="0"> </Label>
    <Label text="Hours worked for Sunday" GridPane.rowIndex="1"  GridPane.columnIndex="0"></Label>
    <TextArea fx:id="sundayHours" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#sundayButton" text="Ok" GridPane.rowIndex="1" GridPane.columnIndex="2"></Button>
    <Label text ="Hours worked for Monday" GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="mondayHours" GridPane.rowIndex="2" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#mondayButton" text="Ok" GridPane.rowIndex="2" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Tuesday" GridPane.rowIndex="3" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="tuesdayHours" GridPane.rowIndex="3" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#tuesdayButton" text="Ok" GridPane.rowIndex="3" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Wednesday" GridPane.rowIndex="4" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="wednesdayHours" GridPane.rowIndex="4" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#wednesdayButton" text="Ok" GridPane.rowIndex="4" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Thursday" GridPane.rowIndex="5" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="thursdayHours" GridPane.rowIndex="5" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#thursdayButton" text="Ok" GridPane.rowIndex="5" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Friday" GridPane.rowIndex="6" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="fridayHours" GridPane.rowIndex="6" GridPane.columnIndex="1" ></TextArea>
    <Button onAction="#fridayButton" text="Ok" GridPane.rowIndex="6" GridPane.columnIndex="2"></Button>
    <Label text="Hours worked for Saturday" GridPane.rowIndex="7" GridPane.columnIndex="0"></Label>
    <TextArea fx:id="saturdayHours" GridPane.rowIndex="7" GridPane.columnIndex="1"></TextArea>
    <Button onAction="#saturdayButton" text="Ok" GridPane.rowIndex="7" GridPane.columnIndex="2"></Button>
    <Button text="Exit" GridPane.rowIndex="8"></Button>
</GridPane>
